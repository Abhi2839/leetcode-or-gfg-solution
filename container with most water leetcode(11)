class Solution {
public:
    int maxArea(vector<int>& height) {
        int area = INT_MIN;
        int l = 0, h = height.size() - 1;
        while (h > l) {
            area = max(area, (h - l) * min(height[l], height[h]));
            if (height[l] < height[h])
                l++;
            else
                h--;
        }
        return area;
    }
};
